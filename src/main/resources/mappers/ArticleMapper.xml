    <resultMap id="Part_Article_Map" type="java.util.HashMap">
        <id column="id" jdbcType="INTEGER" javaType="java.lang.Integer"/>
        <result column="author" jdbcType="VARCHAR" javaType="java.lang.String"/>
        <result column="title" jdbcType="VARCHAR" javaType="java.lang.String"/>
        <result column="article_summary" jdbcType="VARCHAR" javaType="java.lang.String"/>
        <result column="tags" jdbcType="VARCHAR" javaType="java.lang.String"/>
        <result column="article_categories" jdbcType="VARCHAR" javaType="java.lang.String"/>
        <result column="url" jdbcType="VARCHAR" javaType="java.lang.String"/>
        <result column="article_url" jdbcType="VARCHAR" javaType="java.lang.String"/>
        <result column="likes" jdbcType="INTEGER" javaType="java.lang.Integer"/>
        <result column="hits" jdbcType="INTEGER" javaType="java.lang.Integer"/>
